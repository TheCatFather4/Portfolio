<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/cafe.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary">
            <div class="container-fluid">
                <button class="navbar-toggler my-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbar02" aria-controls="navbar02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar02">
                    <a class="navbar-brand text-white">4th Wall Cafe</a>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Hello, @User.Identity.Name!
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">Customer Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="ShoppingCart" asp-action="Index">Shopping Cart</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <form class="form-line" asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-link nav-link text-white">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Cafe
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Cafe" asp-action="Index">Home</a></li>
                                <li><a class="dropdown-item" asp-controller="Cafe" asp-action="Menu">Menu</a></li>
                                <li><a class="dropdown-item" asp-controller="Management" asp-action="Index">Management</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index">Sales Reports</a></li>
                                <li><a class="dropdown-item" asp-controller="Cafe" asp-action="OrderAPI">API</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Portfolio
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a class="dropdown-item" asp-controller="Cafe" asp-action="Index">4th Wall Cafe</a></li>
                                <li><a class="dropdown-item" asp-controller="Cafe" asp-action="OrderAPI">Cafe API</a></li>
                                <li><a class="dropdown-item" href="~/cat-poker/index.html">Cat Poker</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="https://www.github.com/TheCatFather4">GitHub</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Contact">Contact Me</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["Alert"] is string alertData)
        {
            var parts = alertData.Split("|");
            <div class="mt-3 alert alert-@parts[1] alert-dismissible fade show text-center">@parts[0] <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        }
    </div>
    @RenderBody()
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>