@using Portfolio.Models.Ordering
@model PaymentForm
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Process Payment";
}

@if (Model.PaymentStatusId != 1)
{
    <div class="text-center my-3">
        <h2>Process Payment</h2>
    </div>
    <div class="container">
        <div class="row">
            <form asp-controller="ProcessPayment" asp-action="Process" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="OrderId" />
                <div class="form-floating mb-3">
                    <select asp-for="PaymentTypeId" asp-items="Model.PaymentTypes" class="form-control" id="formInput">
                        <option value=""></option>
                    </select>
                    <label asp-for="PaymentTypeId">Payment Method</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" asp-for="Amount" class="form-control" id="formInput" />
                    <label asp-for="Amount">Amount</label>
                </div>
                <input type="hidden" asp-for="TransactionDate" />
                <input type="hidden" asp-for="PaymentStatusId" />
                <div>
                    <button class="btn btn-primary me-2">Confirm Payment</button>
                    <a asp-controller="Profile" asp-action="Index">Back to customer Profile</a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="text-center my-3">
        <h2>Payment Confirmation</h2>
    </div>
    <div class="container">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Payment Type</th>
                        <th>Amount Paid</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.OrderId</td>
                        <td>@Model.PaymentTypeId</td>
                        <td>@Model.Amount</td>
                        <td>@Model.TransactionDate</td>
                        <td>@Model.PaymentStatusId</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="text-center">
        <h3>Go to:</h3>
        <h5><a asp-controller="Profile" asp-action="Index">Customer profile</a></h5>
        <h5><a asp-controller="Cafe" asp-action="Index">Cafe Home</a></h5>
    </div>
}