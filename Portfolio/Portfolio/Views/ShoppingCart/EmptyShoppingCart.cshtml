@using Portfolio.Models.Ordering
@model EmptyCart
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Empty Cart";
}

<div class="text-center">
    <h3>Are you sure you would like to empty your shopping cart?</h3>
</div>
<div class="text-center">
    <form asp-controller="ShoppingCart" asp-action="EmptyShoppingCart" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CustomerId" />
        <button class="btn btn-success" type="submit">Yes</button>
    </form>
    <a class="btn btn-danger mt-2" type="submit" asp-controller="ShoppingCart" asp-action="Index">No</a>
</div>