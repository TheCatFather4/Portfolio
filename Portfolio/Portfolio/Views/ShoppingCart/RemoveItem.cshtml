@using Portfolio.Models.Ordering
@model ItemUpdate
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Update Item";
}

<div class="container">
    <div class="row text-center">
        <h2>Delete item from shopping cart?</h2>
        <h5>@Model.ItemName</h5>
        <h5>Quantity: @Model.Quantity</h5>
        <h5>Price: $@Model.Price</h5>
    </div>
    <div class="row text-center">
        <form asp-controller="ShoppingCart" asp-action="RemoveItem" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CustomerID" />
            <input type="hidden" asp-for="ShoppingBagItemID" />
            <input type="hidden" asp-for="Quantity" />
            <input type="hidden" asp-for="ItemName" />
            <input type="hidden" asp-for="Price" />
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>