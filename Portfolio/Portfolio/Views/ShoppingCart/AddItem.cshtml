@using Portfolio.Models.Ordering
@model CartItem
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Added Item";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="mt-3">
            @if (Model.ItemStatusID != 1)
            {
                <img src="~/item/@Model.ItemName.Substring(0, 3).Insert(3, ".png").ToLower()" class="img-thumbnail img-fluid" style="width: 10rem" />
            }
            else
            {
                <img src="~/item/newitem.png" class="img-thumbnail img-fluid" style="width: 10rem" />
            }
            <h3 class="my-2 text-center" id="titleSection">@Model.ItemName</h3>
            <h5 class="mt-2 text-center">$@Model.Price</h5>
        </div>
        <div class="bg-primary border border-info border-5 rounded p-3 m-3" id="addItemForm">
            <form asp-controller="ShoppingCart" asp-action="AddItem" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ItemID" />
                <input type="hidden" asp-for="ItemName" />
                <div class="form-floating mb-3">
                    <input asp-for="Quantity" class="form-control" type="number" value="1" id="formInput" />
                    <label asp-for="Quantity">Quantity</label>
                    <span asp-validation-for="Quantity" class="text-light"></span>
                </div>
                <input type="hidden" asp-for="Price" />
                <input type="hidden" asp-for="ItemStatusID" />
                <div class="mt-3">
                    <button class="btn btn-success me-3">Add to Cart</button>
                    <a asp-controller="Cafe" asp-action="Menu" class="link-light link-opacity-50-hover link-underline-opacity-50-hover">Back to Menu</a>
                </div>
            </form>
        </div>
    </div>
</div>