@model MenuList
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Menu";
}

<div class="row">
    <h2 class="my-3 text-center" id="titleSection">Something for every time of the day</h2>
</div>
<div class="row">
    <img src="~/img/menutop.jpg" class="img-fluid" />
</div>
<div class="row">
    <h5 class="my-3 text-center"><u>Use the form to filter how the menu is displayed.</u></h5>
</div>
<div class="row">
    <div class="container-fluid px-3">
        <div class="col-md-6 mx-auto border border-5 border-info rounded p-3 bg-primary">
            <form asp-controller="Cafe" asp-action="Menu" method="post">
                @Html.AntiForgeryToken()
                <div class="form-floating mb-3">
                    <select asp-for="SelectedCategoryID" asp-items="Model.Categories" class="form-control" id="formInput">
                        <option value=""></option>
                    </select>
                    <label asp-for="SelectedCategoryID">Category</label>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="SelectedTimeOfDayID" asp-items="Model.TimesOfDays" class="form-control" id="formInput">
                        <option value=""></option>
                    </select>
                    <label asp-for="SelectedTimeOfDayID">Time of Day</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" asp-for="Date" id="formInput" />
                    <label asp-for="Date">Date  (mm/dd/yyyy)</label>
                </div>
                <div>
                    <button type="submit" class="btn btn-success me-3">Show Menu</button>
                    <a asp-controller="Cafe" asp-action="Index" class="link-light link-opacity-50-hover link-underline-opacity-50-hover">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container text-center mt-3">
    <div class="row">
        @if (Model.Items != null)
        {
            @foreach (var i in Model.Items)
            {
                <div class="col-sm-4 mb-3 d-flex justify-content-center">
                    <div class="card" style="width: 18rem;">
                        @if (i.ItemImgPath != null)
                        {
                            <img src="~/item/@i.ItemImgPath" class="card-img-top" id="cardTop" />
                        }
                        else
                        {
                            <img src="~/item/newitem.png" class="card-img-top" id="cardTop" />
                        }
                        <div class="card-body" id="cardBody">
                            <h5 class="card-title">@i.ItemName</h5>
                            <p class="card-text">@i.ItemDescription</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            @foreach (var p in i.Prices)
                            {
                                <li class="list-group-item" id="cardPrice">$@p.Price</li>
                            }
                        </ul>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div id="cardAdd" class="py-2">
                                <a class="btn btn-success" type="submit" asp-controller="ShoppingCart" asp-action="AddItem" asp-route-itemId="@i.ItemID">
                                    Add to Cart
                                </a>
                            </div>
                        }
                        else
                        {
                            <div id="cardAdd" class="py-2">
                                <a class="btn btn-success" type="submit" asp-controller="Account" asp-action="Login" asp-route-itemId="@i.ItemID">
                                    Add to Cart
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>