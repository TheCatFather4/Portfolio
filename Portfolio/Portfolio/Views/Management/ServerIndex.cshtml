@model ServerList
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Server Manager";
}

<div class="container">
    <div class="row" id="titleSection">
        <div class="text-center my-4">
            <h1>Server Manager</h1>
            <h4 class="text-info">Click on the corresponding <i>Edit</i> link to manage a server.</h4>
            <h4 class="text-info">Want to hire more staff?</h4>
            <a asp-controller="Management" asp-action="AddServer" class="btn btn-success mx-2">Add a Server</a>
        </div>
    </div>
    <div class="row">
        <table class="table table-dark table-striped table-hover table-bordered border-primary">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                    <th>Hire Date</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model.Servers)
                {
                    <tr>
                        <td>@s.FirstName</td>
                        <td>@s.LastName</td>
                        <td>@s.DoB.ToShortDateString()</td>
                        <td>@s.HireDate.ToShortDateString()</td>
                        @if (s.TermDate == null)
                        {
                            <td class="text-success">Active</td>
                        }
                        else
                        {
                            <td class="text-danger">Inactive</td>
                        }
                        <td>
                            <a asp-controller="Management" asp-action="EditServer" asp-route-id="@s.ServerID">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>