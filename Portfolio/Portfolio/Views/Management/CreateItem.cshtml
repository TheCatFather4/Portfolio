@model AddItem
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Create Item";
}

<div class="container">
    <div class="text-center my-3">
        <h1>Create Item</h1>
        <h5>Add items to the menu in accord with the fields below.</h5>
    </div>
    <div class="border border-secondary p-3 border-3 rounded" id="menuForm">
        <form asp-controller="Management" asp-action="CreateItem" asp-method="post">
            <div asp-validation-summary="All"></div>
            @Html.AntiForgeryToken()
            <div>
                <label asp-for="SelectedCategoryID" class="form-label">Category</label>
                <select asp-for="SelectedCategoryID" asp-items="Model.Categories" class="form-control">
                    <option value="">--- Select a Category ---</option>
                </select>
            </div>
            <div class="mt-3">
                <label asp-for="Name" class="form-label">Item Name</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="mt-3">
                <label asp-for="Description" class="form-label">Item Description</label>
                <input type="text" asp-for="Description" class="form-control" />
            </div>
            <div class="mt-3">
                <label asp-for="SelectedTimeOfDayID" class="form-label">Time of Day</label>
                <select asp-for="SelectedTimeOfDayID" asp-items="Model.TimeOfDays" class="form-control">
                    <option value="">--- Select a Time of Day ---</option>
                </select>
            </div>
            <div class="mt-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input type="text" asp-for="Price" class="form-control" />
            </div>
            <div class="mt-3">
                <label asp-for="Start" class="form-label">Start Date</label>
                <input type="text" asp-for="Start" class="form-control" />
            </div>
            <div class="mt-3">
                <label asp-for="End" class="form-label">End Date</label>
                <input type="text" asp-for="End" class="form-control" />
            </div>
            <div class="mt-3">
                <button class="btn btn-primary me-3">Add</button>
                <a asp-controller="Management" asp-action="Menu">Go back</a>
            </div>
        </form>
    </div>
</div>