@model AddItem
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Create Item";
}

<div class="container">
    <div class="text-center my-3">
        <h2>Add New Item</h2>
        <p>Add items to the menu using the form below</p>
    </div>
    <div class="border border-info p-3 border-5 rounded bg-primary">
        <form asp-controller="Management" asp-action="CreateItem" asp-method="post">
            <div asp-validation-summary="ModelOnly"></div>
            @Html.AntiForgeryToken()
            <div class="form-floating mb-3">
                <select asp-for="SelectedCategoryID" asp-items="Model.Categories" class="form-control" id="formInput">
                    <option value=""></option>
                </select>
                <label asp-for="SelectedCategoryID">Category</label>
                <span asp-validation-for="SelectedCategoryID" class="text-light"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="text" asp-for="Name" class="form-control" id="formInput" />
                <label asp-for="Name">Item Name</label>
                <span asp-validation-for="Name" class="text-light"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="text" asp-for="Description" class="form-control" id="formInput" />
                <label asp-for="Description" class="form-label">Item Description</label>
                <span asp-validation-for="Description" class="text-light"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="SelectedTimeOfDayID" asp-items="Model.TimeOfDays" class="form-control" id="formInput">
                    <option value=""></option>
                </select>
                <label asp-for="SelectedTimeOfDayID">Time of Day</label>
                <span asp-validation-for="SelectedTimeOfDayID" class="text-light"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="text" asp-for="Price" class="form-control" id="formInput" />
                <label asp-for="Price">Price</label>
                <span asp-validation-for="Price" class="text-light"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="text" asp-for="Start" class="form-control" id="formInput" />
                <label asp-for="Start">Start Date</label>
                <span asp-validation-for="Start" class="text-light"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="text" asp-for="End" class="form-control" id="formInput" />
                <label asp-for="End">End Date</label>
                <span asp-validation-for="End" class="text-light"></span>
            </div>
            <div>
                <button class="btn btn-success me-3">Add</button>
                <a asp-controller="Management" asp-action="Menu" class="link-light link-opacity-50-hover link-underline-opacity-50-hover">Go back</a>
            </div>
        </form>
    </div>
</div>