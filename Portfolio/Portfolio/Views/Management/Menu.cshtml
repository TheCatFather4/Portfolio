@model List<MenuItem>
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Menu Management";
}

<div class="container">
    <div class="row">
        <div class="text-center">
            <h2 class="my-3">Menu Management</h2>
            <h5>Want to spice up or cool down the selection?<br /> Add a <a asp-controller="Management" asp-action="CreateItem" class="text-success">new item</a> to the menu!</h5>
            <p><a asp-controller="Management" asp-action="Index">Go back</a> to management area.</p>
        </div>
    </div>
    <div>
        <div class="row">
            <table class="table table-dark table-striped table-hover table-bordered border-primary">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.ItemName</td>
                            <td>@i.ItemDescription</td>
                            @foreach (var p in i.Prices)
                            {
                                <td>$@p.Price</td>
                            }
                            <td>
                                <a asp-controller="Management" asp-action="EditMenu" asp-route-id="@i.ItemID">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
