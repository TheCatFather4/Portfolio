@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Cafe Management";
}

<div class="row">
    <div class="text-center my-3">
        <h1>Welcome cafe managers!</h1>
        <h5>Please select one of the following areas you would like to manage</h5>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class="text-center">
            <div class="my-3">
                <h3>
                    <a asp-controller="Management" asp-action="Server">Server Management</a>
                </h3>
            </div>
            <div>
                <img src="~/img/servermg.png" class="img-fluid rounded" />
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="text-center">
            <div class="my-3">
                <h3>
                    <a asp-controller="Management" asp-action="Menu">Menu Management</a>
                </h3>
            </div>
            <div>
                <img src="~/img/menumg.png" class="img-fluid rounded" />
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="text-center">
        <div class="mt-3">
            <h4>Back to <a asp-controller="Cafe" asp-action="Index">Cafe Area</a></h4>
        </div>
    </div>
</div>