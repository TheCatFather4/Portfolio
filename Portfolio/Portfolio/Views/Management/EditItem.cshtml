@using Portfolio.Models.Cafe.Management
@model EditItemForm
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Edit Menu";
}

<div class="container">
    <div class="text-center my-4" id="title-section">
        <h1>Edit @Model.ItemName</h1>
        <h4 class="text-info">Use the form below to make adjustments</h4>
    </div>
    <div class="border border-info p-3 border-5 rounded bg-primary">
        <form asp-controller="Management" asp-action="EditItem" method="post" asp-route-id="@Model.ItemID">
            <div asp-validation-summary="ModelOnly"></div>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ItemID" />
            <input type="hidden" asp-for="CategoryID" />
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="ItemName" id="form-input" />
                <label asp-for="ItemName">Item Name</label>
                <span asp-validation-for="ItemName" id="validation-text"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="ItemDescription" id="form-input" />
                <label asp-for="ItemDescription">Description</label>
                <span asp-validation-for="ItemDescription" id="validation-text"></span>
            </div>
            <input type="hidden" asp-for="ItemImgPath" />
            @for (int i = 0; i < Model.Prices.Count; i++)
            {
                <input type="hidden" asp-for="Prices[i].ItemPriceID" />
                <input type="hidden" asp-for="Prices[i].ItemID" />
                <input type="hidden" asp-for="Prices[i].TimeOfDayID" />
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" asp-for="Prices[i].Price" id="form-input" />
                    <label asp-for="Prices[i].Price">Price</label>
                    <span asp-validation-for="Prices[i].Price" id="validation-text"></span>
                </div>
                <input type="hidden" asp-for="Prices[i].StartDate" />
                <input type="hidden" asp-for="Prices[i].EndDate" />
            }
            <div>
                <button type="submit" class="btn btn-success me-3">Save</button>
                <a asp-controller="Management" asp-action="MenuIndex" class="link-light link-opacity-50-hover link-underline-opacity-50-hover">Go back</a>
            </div>
        </form>
    </div>
</div>