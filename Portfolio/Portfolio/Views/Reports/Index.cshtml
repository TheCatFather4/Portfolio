@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Sales Reports";
}

<div class="text-center my-3" id="titleSection">
    <h2>Welcome accountants and sales managers!</h2>
    <h4>Please select a sales report section:</h4>
</div>
<div class="container-fluid d-flex bg-info">
    <div class="col-md-6 text-center">
        <div class="mt-3 mb-4" id="titleSection">
            <h3>
                <a class="link-light link-opacity-50-hover link-underline-opacity-50-hover" asp-controller="Reports" asp-action="OrderSales">Sales by Order</a>
            </h3>
        </div>
        <div class="mb-5 mx-3">
            <img src="~/img/report1.jpg" class="img-fluid img-thumbnail" />
        </div>
    </div>
    <div class="col-md-6 text-center">
        <div class="mt-3 mb-4" id="titleSection">
            <h3>
                <a class="link-light link-opacity-50-hover link-underline-opacity-50-hover" asp-controller="Reports" asp-action="ItemCategorySales">Sales by Item/Category</a>
            </h3>
        </div>
        <div class="mb-5 mx-3">
            <img src="~/img/report2.jpg" class="img-fluid img-thumbnail" />
        </div>
    </div>
</div>
<div class="mt-5 text-center" id="titleSection">
    <h3>Back to <a asp-controller="Home" asp-action="Cafe" class="link-success link-opacity-50-hover link-underline-opacity-50-hover">Cafe</a></h3>
</div>