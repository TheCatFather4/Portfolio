@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Sales Reports";
}

<div class="row">
    <div class="text-center my-5" id="title-section">
        <h2>Welcome accountants and sales managers!</h2>
        <h4>Please select a sales report section:</h4>
    </div>
</div>
<div class="row">
    <div class="d-flex justify-content-evenly bg-info">
        <div class="card my-3" style="width: 30rem" id="bottom-img-container">
            <img src="~/img/cafe/order-date.jpg" class="card-img" />
            <div id="img-overlay">
                <div id="img-text"><a class="link-info link-opacity-50-hover link-underline-opacity-50-hover" asp-controller="Reports" asp-action="OrderSales" id="title-section">Sales Reports by Date</a></div>
            </div>
        </div>
        <div class="card my-3" style="width: 30rem" id="bottom-img-container">
            <img src="~/img/cafe/order-category.jpg" class="card-img" />
            <div id="img-overlay">
                <div id="img-text"><a class="link-info link-opacity-50-hover link-underline-opacity-50-hover" asp-controller="Reports" asp-action="ItemCategorySales" id="title-section">Sales Reports by Item/Category</a></div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="mt-5 text-center" id="title-section">
        <h3>Back to <a asp-controller="Home" asp-action="Cafe" class="link-success link-opacity-50-hover link-underline-opacity-50-hover">Cafe</a></h3>
    </div>
</div>