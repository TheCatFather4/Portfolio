@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Sales Reports";
}

<div class="text-center my-5" id="titleSection">
    <h2>Welcome accountants and sales managers!</h2>
    <h4>Please select a sales report section:</h4>
</div>
<div class="container-fluid d-flex justify-content-evenly bg-info">
    <div class="card my-3" style="width: 30rem" id="bottomImgContainer">
        <img src="~/img/report1.jpg" class="card-img" />
        <div id="imgOverlay">
            <div id="imgText"><a class="link-info link-opacity-50-hover link-underline-opacity-50-hover" asp-controller="Reports" asp-action="OrderSales" id="titleSection">Sales Reports by Order</a></div>
        </div>
    </div>
    <div class="card my-3" style="width: 30rem" id="bottomImgContainer">
        <img src="~/img/report2.jpg" class="card-img" />
        <div id="imgOverlay">
            <div id="imgText"><a class="link-info link-opacity-50-hover link-underline-opacity-50-hover" asp-controller="Reports" asp-action="ItemCategorySales" id="titleSection">Sales Reports by Item/Category</a></div>
        </div>
    </div>
</div>
<div class="mt-5 text-center" id="titleSection">
    <h3>Back to <a asp-controller="Home" asp-action="Cafe" class="link-success link-opacity-50-hover link-underline-opacity-50-hover">Cafe</a></h3>
</div>