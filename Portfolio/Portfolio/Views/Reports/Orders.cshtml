@using Portfolio.Models.Reports
@model OrderRevenue
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Order Reports";
}

<div class="container">
    <div class="row">
        <div class="my-3 text-center">
            <h1>Order Revenue</h1>
            <h5>Select or enter a date to display a daily sales report.</h5>
        </div>
    </div>
    <div class="border border-success p-3 border-3 rounded" id="reportsForm">
        <form asp-controller="Reports" asp-action="Orders" method="post">
            @Html.AntiForgeryToken()
            <div>
                <label asp-for="OrderDate" class="form-label">Order Date</label>
                <input type="date" class="form-control" asp-for="OrderDate" />
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary me-3">Show Report</button>
                <a asp-controller="Reports" asp-action="Index">Go Back</a>
            </div>
        </form>
    </div>
    @if (Model.Orders != null && Model.TotalRevenue > 0)
    {
        <div class="row">
            <div class="my-3">
                <table class="table table-success table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>Sub Total</th>
                            <th>Tax</th>
                            <th>Tip</th>
                            <th>Guest Final Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var o in Model.Orders)
                        {
                            <tr>
                                <td>@o.OrderDate.ToShortTimeString()</td>
                                <td>$@o.SubTotal</td>
                                <td>$@o.Tax</td>
                                <td>$@o.Tip</td>
                                <td>$@o.FinalTotal</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-3 text-center">
                <h3>The total revenue for @Model.OrderDate.Value.ToShortDateString() is $<span class="text-success">@Model.TotalRevenue</span>.</h3>
            </div>
        </div>
    }
</div>

