@using Portfolio.Models.Reports
@model ItemRevenue
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Item and Category Reports";
}

<div class="container">
    <div class="row">
        <div class="text-center">
            <h1 class="mt-3">Sales Reports by Item or Category</h1>
            <h5>Select the appropriate form to view a sales report in accord with the selected option</h5>
            <p class="mb-3">Back to <a asp-controller="Reports" asp-action="Index">reports area</a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="border border-primary p-3 border-3 rounded" id="reportsForm2">
                <form asp-controller="Reports" asp-action="Items" method="post">
                    @Html.AntiForgeryToken()
                    <div>
                        <label asp-for="SelectedItemID" class="form-label">Items</label>
                        <select asp-for="SelectedItemID" asp-items="Model.Items" class="form-control">
                            <option value="">---Select---</option>
                        </select>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary my-3">View Item Report</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <div class="border border-primary p-3 border-3 rounded" id="reportsForm2">
                <form asp-controller="Reports" asp-action="Items" method="post">
                    @Html.AntiForgeryToken()
                    <div>
                        <label asp-for="SelectedCategoryID" class="form-label">Categories</label>
                        <select asp-for="SelectedCategoryID" asp-items="Model.Categories" class="form-control">
                            <option value="">---Select---</option>
                        </select>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary my-3">View Category Report</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        @if (Model.Prices != null)
        {
            <div class="my-3">
                <table class="table table-primary table-striped table-bordered border-info">
                    <thead>
                        <tr>
                            @if (Model.SelectedItemID == null)
                            {
                                <th>Item Name</th>
                            }
                            <th>Price Per Item</th>
                            <th>Quantity Sold</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.Prices)
                        {
                            @if (p.TotalQuantity != 0)
                            {
                                <tr>
                                    @if (Model.SelectedItemID == null)
                                    {
                                        <td>@p.Item.ItemName</td>
                                    }
                                    <td>$@p.ItemPrice.Price</td>
                                    <td>@p.TotalQuantity</td>
                                    <td>$@p.TotalExtendedPrice</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <h3>Total Revenue: $<span class="text-success">@Model.TotalRevenue</span></h3>
            </div>
        }
    </div>
</div>


