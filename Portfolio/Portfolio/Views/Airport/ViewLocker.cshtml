@using Portfolio.Models.Airport
@model ViewLockerForm
@{
    Layout = "_AirportLayout";
    ViewData["Title"] = "Airport Locker Rental";
}

<div class="container border border-2 border-danger">
    <div class="row bg-danger" id="console-top">
        <p class="text-white">C:\project\net9.0\airport-locker-rental.exe</p>
    </div>
    <div class="row bg-black">
        <p class="text-white">
            ===============<br />
            | Airport Locker Rental |<br />
            ===============<br />
            | <span class="text-success">1. View a Locker</span><br />
            | 2. Rent a Locker<br />
            | 3. End Locker Rental<br />
            | 4. List All Lockers<br />
            | 5. Exit<br />
            ===============<br />
        </p>
        <form asp-controller="Airport" asp-action="ViewLocker" asp-method="post">
            @Html.AntiForgeryToken()
            <p class="text-white">
                ------------------------------------------------<br />
                Which locker would you like to view?<br />
                Locker numbers range from 1 to 100<br />
                Enter your choice: <input type="text" asp-for="LockerNumber" /><br />
                ------------------------------------------------<br />
            </p>
            <input type="hidden" asp-for="Message" />
            <input type="hidden" asp-for="Locker" />
            <div style="display:none">
                <button type="submit"></button>
            </div>
        </form>
        @if (Model.Message != null)
        {
            <p class="text-danger">@Model.Message</p>
        }
        @if (Model.Locker != null)
        {
            <p class="text-primary">
                ================================<br />
                Locker #: @Model.LockerNumber<br />
                Renter Name: @Model.Locker.RenterName<br />
                Locker Contents: @Model.Locker.Contents<br />
                ================================<br />
            </p>
        }
    </div>
</div>
<div class="mt-3">
    <a asp-controller="Airport" asp-action="Menu" class="btn btn-danger" type="submit">Back to main menu</a>
</div>