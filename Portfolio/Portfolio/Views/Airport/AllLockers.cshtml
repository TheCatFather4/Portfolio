@using Portfolio.Models.Airport
@model AllLockersDisplay
@{
    Layout = "_AirportLayout";
    ViewData["Title"] = "Airport Locker Rental";
}

<div class="container border border-2 border-danger">
    <div class="row bg-danger" id="consoleTop">
        <p class="text-white">C:\project\net9.0\airport-locker-rental.exe</p>
    </div>
    <div class="row bg-black">
        <p class="text-white">
            ===============<br />
            | Airport Locker Rental |<br />
            ===============<br />
            | 1. View a Locker<br />
            | 2. Rent a Locker<br />
            | 3. End Locker Rental<br />
            | <span class="text-success">4. List All Lockers</span><br />
            | 5. Exit<br />
            ===============<br />
        </p>
        <div class="text-white">--------------------------------------<br /></div>
        @if (Model.Message != null)
        {
            <p class="text-white">@Model.Message</p>
        }
        @if (Model.Lockers != null)
        {
            <div class="text-primary">============================</div>
            @foreach (var l in Model.Lockers)
            {
                <div class="text-primary">
                    <div>Locker #: @l.LockerNumber</div>
                    <div>Renter Name: @l.RenterName</div>
                    <div>Locker Contents: @l.Contents</div>
                    <div>============================</div>
                </div>
            }
        }
        <div class="text-white">--------------------------------------<br /></div>
        <div><br /></div>
    </div>
</div>
<div class="mt-3">
    <a asp-controller="Airport" asp-action="Menu" class="btn btn-danger" type="submit">Back to main menu</a>
</div>