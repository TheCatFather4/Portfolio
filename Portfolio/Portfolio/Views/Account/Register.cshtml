@using Portfolio.Models.Cafe.Account
@model RegisterUserForm
@{
    Layout = "_CafeLayout";
    ViewData["Title"] = "Register User";
}

<div class="row">
    <div class="text-center my-3" id="title-section">
        <h2>Register a New Account</h2>
        <p class="mt-2" id="register-1">Create an account to access your customer profile and order food online!</p>
        <h5 class="text-success">Returning customer? <a asp-controller="Account" asp-action="Login">Log in</a></h5>
    </div>
</div>
<div class="row">
    <div class="px-3">
        <div class="col-md-6 mx-auto border border-info border-5 rounded p-3 bg-primary">
            <form asp-controller="Account" asp-action="Register" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" id="validation-text"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" id="form-input" />
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" id="validation-text"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" id="form-input" />
                    <label asp-for="Password">Password</label>
                    <span asp-validation-for="Password" id="validation-text"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" id="form-input" />
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" id="validation-text"></span>
                </div>
                <button type="submit" class="btn btn-success me-3">Register</button>
                <a asp-controller="Home" asp-action="Cafe" class="link-light link-opacity-50-hover link-underline-opacity-50-hover">Go Back</a>
            </form>
        </div>
    </div>
</div>